---
// src/pages/blog/index.astro
import { getBlogPosts } from '../../lib/notion.js'
import '../../styles/global.css';

const posts = await getBlogPosts()
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8"/>
    <title>靈氣療癒部落格｜Deo Healing 和光天澄</title>
    <meta content="深入閱讀靈氣療癒、能量轉化與靜心實踐的真實分享，由靈氣導師 Deo 用溫柔文字陪你回到內在光源。" name="description"/>
    <meta content="靈氣療癒部落格｜Deo Healing 和光天澄" property="og:title"/>
    <meta content="深入閱讀靈氣療癒、能量轉化與靜心實踐的真實分享，由靈氣導師 Deo 用溫柔文字陪你回到內在光源。" property="og:description"/>
    <meta content="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fd264f24f603e269f38118_Open%20Graph.png" property="og:image"/>
    <meta content="靈氣療癒部落格｜Deo Healing 和光天澄" property="twitter:title"/>
    <meta content="深入閱讀靈氣療癒、能量轉化與靜心實踐的真實分享，由靈氣導師 Deo 用溫柔文字陪你回到內在光源。" property="twitter:description"/>
    <meta content="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fd264f24f603e269f38118_Open%20Graph.png" property="twitter:image"/>
    <meta property="og:type" content="website"/>
    <meta content="summary_large_image" name="twitter:card"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    <meta content="k5Bmk6Cy5aXG85mPbnY3Y8okD5YiYMdP7FJBud3U8Xc" name="google-site-verification"/>
    
    <!-- Favicon -->
    <link href="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fc818909092e0803265c0d_webclip_small.png" rel="shortcut icon" type="image/x-icon"/>
    <link href="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fc81f0a181106d8014fe2b_webclip_256x256.png" rel="apple-touch-icon"/>
</head>
<body>
    <!-- 導覽列 -->
    <div class="navigation">
        <div class="navigation-wrap">
            <a href="/" class="logo-link w-inline-block">
                <img src="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fb774f286c19f6c0565a08_2636e0313ddb1676d513fb3508fc1a40_business-logo3%402x.avif" width="250" alt="Deo Healing Logo" class="logo-image">
            </a>
            <!-- 桌面版導覽 -->
            <nav class="navigation-items">
                <a href="/" class="navigation-item">首頁</a>
                <a href="/aboutdeo" class="navigation-item">關於Deo</a>
                <a href="/services" class="navigation-item">服務項目</a>
                <a href="/courses" class="navigation-item">課程資訊</a>
                <a href="/blog" class="navigation-item w--current">靈氣文章</a>
                <a href="/contact" class="navigation-item">聯絡我</a>
            </nav>
            <!-- 手機版漢堡選單按鈕 -->
            <div class="menu-button w-nav-button" id="mobile-menu-btn">
                <div class="menu-icon">
                    <div class="menu-line"></div>
                    <div class="menu-line"></div>
                    <div class="menu-line"></div>
                </div>
            </div>
            <!-- 桌面版聯絡按鈕 -->
            <a href="/contact" class="primary-button cc-contact-us">
                聯絡我
            </a>
        </div>
        <!-- 手機版導覽選單 -->
        <div class="mobile-menu" id="mobile-menu">
            <nav class="mobile-navigation-items">
                <a href="/" class="mobile-navigation-item">首頁</a>
                <a href="/aboutdeo" class="mobile-navigation-item">關於Deo</a>
                <a href="/services" class="mobile-navigation-item">服務項目</a>
                <a href="/courses" class="mobile-navigation-item">課程資訊</a>
                <a href="/blog" class="mobile-navigation-item w--current">靈氣文章</a>
                <a href="/contact" class="mobile-navigation-item">聯絡我</a>
            </nav>
        </div>
    </div>

    <!-- Hero 區塊 -->
    <div class="section cc-home-wrap">
        <div class="intro-header cc-subpage">
            <div class="intro-content">
                <div class="heading-jumbo">
                    靈氣文章
                    <br>
                </div>
            </div>
        </div>
    </div>

    <!-- 部落格文章列表 -->
    <div class="section">
        <div class="container">
            <div class="section-heading-wrap">
                <div class="label cc-light"></div>
                <h2>我們的故事</h2>
            </div>
            
            <!-- 文章列表 -->
            <div class="w-dyn-list">
                <div role="list" class="blog-list-wrap w-dyn-items">
                    {posts.map((post) => (
                        <div role="listitem" class="blog-item w-dyn-item">
                            {post.coverImage && (
                                <a 
                                    style={`background-image:url("${post.coverImage}")`} 
                                    href={`/blog/${post.slug}`} 
                                    class="blog-preview-image w-inline-block">
                                </a>
                            )}
                            <div class="blog-summary-wrap">
                                <a href={`/blog/${post.slug}`} class="blog-heading-link">
                                    {post.title}
                                </a>
                                <div class="paragraph-light">
                                    {post.summary || ''}
                                </div>
                                <div class="label cc-blog-date">
                                    {new Date(post.date).toLocaleDateString('zh-TW', { 
                                        year: 'numeric', 
                                        month: 'long', 
                                        day: 'numeric' 
                                    })}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>

    <!-- CTA 區塊 -->
    <div class="section cc-cta">
        <div class="container">
            <div class="cta-wrap">
                <div>
                    <div class="cta-text">
                        <div class="heading-jumbo-small">
                            願你從今天開始，好好照顧自己的身心
                            <br>
                        </div>
                        <div class="paragraph-bigger cc-bigger-light">
                            也許你也在尋找一種方式，讓內在回歸平靜與清明。在這裡，你不必急著改變什麼，只要允許自己——被好好接住。
                            <br>
                        </div>
                    </div>
                    <a href="/contact" class="primary-button cc-jumbo-button w-inline-block">
                        寫封信給我，也許從這裡開始
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="section">
        <div class="container">
            <div class="footer-wrap">
                <img src="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/67fc81f0a181106d8014fe2b_webclip_256x256.avif" loading="lazy" width="60" alt="" class="image-3">
                <p class="paragraph-2">
                    <span class="text-span">
                        <strong>Deo Healing 和光天澄</strong>
                    </span>
                </p>
                <p class="paragraph-3">願靈氣的光，陪你走回內在的安定與明亮。</p>
                <a href="https://lin.ee/0rnlwA1" target="_blank" style="display: inline-block; text-decoration: none;">
                    <img src="https://cdn.prod.website-files.com/67fb69191746ed16336a6102/6827ec3f24c67dfc507ee2df_LINE_Brand_icon.png" loading="lazy" width="30" alt="" class="image-4">
                </a>
                <p class="paragraph-4">
                    <span class="text-span-2">© 2025 Deo Healing 和光天澄. 保留所有權利。</span>
                </p>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script type="module">
        // 手機選單功能
        document.addEventListener("DOMContentLoaded", function() {
            const menuBtn = document.getElementById("mobile-menu-btn");
            const mobileMenu = document.getElementById("mobile-menu");
            const body = document.body;
            
            if (menuBtn && mobileMenu) {
                menuBtn.addEventListener("click", function() {
                    if (menuBtn.classList.contains("active")) {
                        menuBtn.classList.remove("active");
                        mobileMenu.classList.remove("show");
                        body.style.overflow = "";
                    } else {
                        menuBtn.classList.add("active");
                        mobileMenu.classList.add("show");
                        body.style.overflow = "hidden";
                    }
                });
                
                // 點擊選單項目關閉選單
                document.querySelectorAll(".mobile-navigation-item").forEach(item => {
                    item.addEventListener("click", function() {
                        menuBtn.classList.remove("active");
                        mobileMenu.classList.remove("show");
                        body.style.overflow = "";
                    });
                });
                
                // 點擊選單外關閉選單
                mobileMenu.addEventListener("click", function(e) {
                    if (e.target === mobileMenu) {
                        menuBtn.classList.remove("active");
                        mobileMenu.classList.remove("show");
                        body.style.overflow = "";
                    }
                });
            }
        });
    </script>
</body>
</html>