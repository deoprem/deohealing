<!-- 表單處理邏輯 -->
<script>
  document.getElementById("reiki-form").addEventListener("submit", function(e) {
    
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    const params = new URLSearchParams(formData);


    fetch("https://script.google.com/macros/s/AKfycbxEBACXF7w9LaPQDef9tx0_kx4_-UQb-mO-sQ_1jO0APRQXpKMdhKfhUCDEl62rXgLg/exec", {
      method: "POST",
      body: params,
    })
    .then(() => {
      form.reset();

      const overlay = document.getElementById("thankyou-overlay");
      const box = document.getElementById("thankyou-box");

      overlay.style.display = "flex";
      box.classList.add("fade-in");

      setTimeout(() => {
        box.classList.remove("fade-in");
        box.classList.add("fade-out");
        setTimeout(() => {
          overlay.style.display = "none";
          box.classList.remove("fade-out");
        }, 1000);
      }, 3000);
    })
    .catch(() => {
      alert("⚠️ 送出失敗，請稍後再試。");
    });
    console.log("留言欄位送出的內容是：", formData.get("message"));
  });
  
  
</script>
